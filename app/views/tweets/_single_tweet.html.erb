<div class="tweet">
  <% if !t.body && t.retweet_id %>
    <%= render "tweets/retweet_info", t: t %>
    <%= render "tweets/creator_info", t: Tweet.find(t.retweet_id) %>
    <%= render "tweets/tweet_body", t: Tweet.find(t.retweet_id) %>
    <%= render "tweets/likes", t: Tweet.find(t.retweet_id) %>
    <%= render "tweets/retweets", t: Tweet.find(t.retweet_id) %>
  <% else %>
    <%= render "tweets/creator_info", t: t %>
    <%= render "tweets/tweet_body", t: t %>
    <%= render "tweets/likes", t: t %>
    <%= render "tweets/retweets", t: t %>
  <% end %>

</div>

