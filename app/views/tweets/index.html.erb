
<% if current_user.created_at > (0.2).seconds.ago %>
  <%= render "users/profile_form" %>
<% end %>

<div><%= render "tweet_form" %></div>

<% @tweets.each do |t| %>
  <div class="tweet">
    <%= link_to username_path(t.author.username), :class => "author" do %>
      <div class="creation-info">
        <%= t.author.display_name %> <%= lock_icon_svg if t.author.account.private_visibility %>
        <%= t.author.username %><span> Â· </span><%= formatted_time_ago(t.created_at) %>

      </div>
    <% end%>
      <div id="tweet-body">
        <a onclick="window.location = '/tweets/<%= t.id %>'"><%= t.body %></a>
      </div>
  </div>
<% end %>

<%= button_to "Sign out", destroy_user_session_url, method: :delete %>
